<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/commandExeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CommandExecution" />

            <Button
                android:id="@+id/easySpBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EasySP" />

            <Button
                android:id="@+id/fileBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="File Utils" />

            <Button
                android:id="@+id/LogManagerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LogManager" />

            <Button
                android:id="@+id/shellUtilsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ShellUtils" />

            <Button
                android:id="@+id/storageUtilsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="StorageUtils" />

            <Button
                android:id="@+id/threadPoolManagerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ThreadPoolManager" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:text="Hello World!" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

